<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://consumableBrowse.caption"
        focusComponent="consumablesTable"
        messagesPack="com.company.clinic.web.screens.consumable"
        xmlns:chart="http://schemas.haulmont.com/charts/charts.xsd">
    <data readOnly="true">
        <collection id="consumablesDc"
                    class="com.company.clinic.entity.Consumable">
            <view extends="_local"/>
            <loader id="consumablesDl">
                <query>
                    <![CDATA[select e from clinic_Consumable e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="consumablesTable"
            spacing="true">
        <chart:serialChart id="consumablePrices"
                           categoryField="name"
                           width="100%"
                           height="200px">
            <chart:graphs>
                <chart:graph type="COLUMN" fillAlphas="1"
                             lineAlpha="0"
                             colorField="color" valueField="price"/>
            </chart:graphs>
            <chart:categoryAxis labelRotation="20"/>
        </chart:serialChart>
        <filter id="filter"
                applyTo="consumablesTable"
                dataLoader="consumablesDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="consumablesTable"
                    width="100%"
                    dataContainer="consumablesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="title"/>
                <column id="description"/>
                <column id="price"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="consumablesTable.create"/>
                <button id="editBtn" action="consumablesTable.edit"/>
                <button id="removeBtn" action="consumablesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
